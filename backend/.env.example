# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/campus_connect

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=campus-connect-uploads

# Firebase Configuration (Optional - Alternative to AWS S3)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_STORAGE_BUCKET=your_bucket_name

# Client URL (Update for production deployment)
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173
# For production on Render, set CLIENT_URL=https://campus-connect-hazel-xi.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif,webp,mp4,mov,avi

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=Campus Connect

# Email Notifications Toggle
ENABLE_EMAIL_NOTIFICATIONS=false

# Cron Jobs Configuration
ENABLE_CRON_JOBS=false
ENABLE_DAILY_DIGEST=true
ENABLE_WEEKLY_DIGEST=true
ENABLE_ACK_REMINDERS=true

# Socket.io Configuration
SOCKET_PING_TIMEOUT=5000
SOCKET_PING_INTERVAL=10000
